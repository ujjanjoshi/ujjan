<!-- sidebar.j2 -->
<aside class="sidebar" data-sidebar>
  <div class="sidebar-info">
    <figure class="avatar-box">
      <img src="{{profile.USER.avatar}}" alt="{{profile.USER.name}}" width="80">
    </figure>
    <div class="info-content">
      <h1 class="name" title="{{profile.USER.name}}">{{profile.USER.name}}</h1>
      <p class="title">{{profile.USER.role}}</p>
    </div>
    <button class="info_more-btn" data-sidebar-btn>
      <span>{{profile.HEADER.label}}</span>
      <ion-icon name="chevron-down"></ion-icon>
    </button>
  </div>
  <div class="sidebar-info_more">
    <div class="separator"></div>
    <ul class="contacts-list">
      {% for info in profile.INFO %}
      <li class="contact-item">
        <div class="icon-box">
          <ion-icon name="{{info.icon}}"></ion-icon>
        </div>
        <div class="contact-info">
          <p class="contact-title">{{info.label}}</p>
          {% if info.label=="Email"%}
          <a href="mailto:{{info.value}}" class="contact-link">{{info.value}}</a>
          {% else %}
           <a href="#" class="contact-link">{{info.value}}</a>
          {% endif %}
        </div>
      </li>
      {% endfor %}
    </ul>
    <div class="separator"></div>
    <ul class="social-list">
      {% for social in profile.SOCIAL %}
      <li class="social-item">
        <a href="{{social.url}}" class="social-link" , target="_blank">
         
          {% if social.icon == "config/assets/icons/mobile.svg" %}
          <img src="{{social.icon}}" alt="Fiverr Icon" width="24" height="24">
          {% else %}
          <ion-icon name="{{social.icon}}"></ion-icon>
          {%endif%}
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>
</aside>